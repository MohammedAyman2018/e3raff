mixin navi(main, active)
    nav.bg-white.fixed.top-0.shadow-xl.w-full.h-12.text-center.justify-center.flex.flex-wrap.z-50.left-0
        .container.justify-center.flex.flex-wrap(class="md:justify-start")
            button(class='w-3/12 m-auto bg-black text-white text-sm h-6 rounded-lg md:hidden outline-none' id="open") الأقسام
            .logo.flex(class="w-8/12 bg-white text-black font-bold text-2xl md:w-1/12 md:text-white md:text-xl md:shadow-inner md:bg-red-800")
                h1.m-auto إعرف
            .links(class="hidden md:block md:w-11/12")
                ul.h-full
                    li.h-full.text-sm.cursor-pointer.inline-flex.relative
                        button.outline-none.inline-block.m-auto.mx-2.font-bold(href="#" class="focus:outline-none md:mx-1 md:text-xs lg:mx-2" class='active') الرئيسية
                    each list,index in active
                        li.h-full.text-sm.cursor-pointer.inline-flex.relative(data-show=index)
                            button.outline-none.inline-block.m-auto.mx-2.font-bold(href="#" class="focus:outline-none md:mx-1 md:text-xs lg:mx-2" class=list[1])=list[0]
                                i.fas.fa-caret-down.mx-1(class="md:mx-0")
                            .drop-down.bg-white.w-full.shadow-md.absolute.top-auto.right-0.hidden(data-number=index)
                                a.block.text-center.font-bold.border.border-b.p-2(class="hover:bg-red-800 hover:text-white" href="#") قائمة منسدلة
                                a.block.text-center.font-bold.border.border-b.p-2(class="hover:bg-red-800 hover:text-white" href="#") قائمة منسدلة
                                a.block.text-center.font-bold.border.border-b.p-2(class="hover:bg-red-800 hover:text-white" href="#") قائمة منسدلة
                                a.block.text-center.font-bold.p-2(class="hover:bg-red-800 hover:text-white" href="#") قائمة منسدلة

            .collapse.top-0.right-0.h-full.fixed.pt-16.flex.flex-wrap.justify-center.items-center#collapse(class="lg:hidden w-8/12 bg-white shadow-2xl")
                button#close.absolute.top-0.p-3.font-bold.right-0.border.border-black x
                ul
                    li.p-2.text-xl.cursor-pointer
                            button(href="#" class='active focus:outline-none') الرئيسية
                    each list,index in active
                        li.p-2.text-xl.cursor-pointer.relative(data-show=index+8)
                            button(href="#" class="focus:outline-none" class=list[1])=list[0]
                                i.fas.fa-caret-down.mx-1
                            .drop-down.bg-white.w-full.shadow-md.absolute.z-50.hidden(data-number=index+8)
                                a.block.text-center.font-bold.border.border-b.p-2(class="hover:bg-red-800 hover:text-white" href="#") قائمة منسدلة
                                a.block.text-center.font-bold.border.border-b.p-2(class="hover:bg-red-800 hover:text-white" href="#") قائمة منسدلة
                                a.block.text-center.font-bold.border.border-b.p-2(class="hover:bg-red-800 hover:text-white" href="#") قائمة منسدلة
                                a.block.text-center.font-bold.p-2(class="hover:bg-red-800 hover:text-white" href="#") قائمة منسدلة